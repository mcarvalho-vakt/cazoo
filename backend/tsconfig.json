{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
        "@modules/*": ["modules/*"],
        "@shared/*": ["shared/*"],
        "@config/*": ["config/*"]
      },  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
}
